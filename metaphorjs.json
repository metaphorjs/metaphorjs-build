{
    "version": "0.3.5",
    "description": "MetaphorJs builder",

    "push": [
        "github"
    ],

    "build": {
        "npm": {
            "target": "dist/metaphorjs.build.js",
            "auto": true,
            "files": [
                ["metaphorjs/src/MetaphorJs.js", {"as": "MetaphorJs"}],
                ["src/**"]
            ],
            "omit": [
                "src/class/**"
            ],
            "options": {
                "exports": true,
                "expose": [
                    "Bundle",
                    "Builder",
                    "File",
                    "Config",
                    "Import",
                    "Base",
                    "build",
                    "compile"
                ]
            }
        }
    }
}